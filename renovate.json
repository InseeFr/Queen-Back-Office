{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "semanticCommits"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": [
        "*"
      ]
    }
  ],
  "semanticCommits": "enabled",
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security"]
  },
  "separateMajorMinor": true,
  "baseBranches": ["v4-develop"],
  "useBaseBranchConfig": "merge"
}